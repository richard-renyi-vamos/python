Height = float(input("Enter your height in centimeters: "))
Weight = float(input("Enter your Weight in Kg: "))
Height = Height/100
BMI=Weight/(Height*Height)
print("your Body Mass Index is: ",BMI)
if(BMI>0):
	if(BMI<=16):
		print("You are severely underweight according the BMI index..")
	elif(BMI<=18.5):
		print("You are underweight according the BMI index..")
	elif(BMI<=25):
		print("You have a healthy weight according the BMI index.")
	elif(BMI<=30):
		print("you are overweight according the BMI index.")
	else: print("You are severely overweight according the BMI index.")
else:("Please enter valid details!")
